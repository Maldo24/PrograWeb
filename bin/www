#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('prograweb:server');
var http = require('http'); // Se mantiene pero ya no se usa para crear el servidor

//  NUEVAS IMPORTACIONES PARA HTTPS/HTTP/2
var https = require('https'); // Se mantiene por si se necesita
var fs = require('fs'); // Módulo nativo para leer archivos .pem [cite: 87]
var spdy = require('spdy'); // Librería para soporte de HTTP/2 [cite: 146]

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '5000');
app.set('port', port);

/**
 * Crear el Servidor SEGURO (HTTPS/HTTP/2)
 */

// 1. Leemos los certificados (¡Ajusta la ruta si moviste los archivos!) 
var options = {
    key: fs.readFileSync('key.pem'),
    cert: fs.readFileSync('cert.pem')
};

// 2. Creamos el servidor usando SPDY (que soporta HTTP/2) [cite: 151, 152]
var server = spdy.createServer(options, app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  console.log('Servidor seguro corriendo en https://localhost:' + addr.port); // Mensaje actualizado
  debug('Listening on ' + bind);
}